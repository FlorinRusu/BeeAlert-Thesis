</head>
    <body>
                    {{#if user}}
                      <!-- ===================================================================
                                When user is authenticated
                      ======================================================================== -->
                      <div class="header">
                          <div class="row">
                              <!-- Logo -->
                              <div class="hd col-lg-1 col-md-1  col-xs-1">
                                  <img src="/assets/images/beealert1.png" class="logo" alt="post img">
                              </div>
                              <!-- Search-->
                              <div class="col-lg-7 col-md-7 col-xs-1">
                                  <div id="custom-search-input">
                                      <div class="input-group ">
                                          <input type="text" id="form-control" class="form-control" placeholder="Search" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" id="search-btn" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                                      </div>
                                  </div>
                              </div>


                              <!-- Settings -->
                              <div class="col-lg-4 col-md-4 col-sm-4">
                                  <div class="settings text-center">
                                      <div class="setting-1 ">
                                          <p>{{user.username}}</p>
                                      </div>

                                      <div class="setting-2">
                                          <div class="btn-group ">
                                              <i class="fa fa-bell" style="font-size:23px;">

                                                  <span  class="ring-badge"></span>
                                                  <ul id ="drop-list" class="dropdown-menu">
                                                      <div class="text-center" style="font-weight:bold; color:#3a2a28;">Notificări</div>
                                                      <div class="divider"></div>
                                                      <li> <a href="#">Cutremur Grade:5.0</a></li>
                                                      <div class="divider"></div>
                                                      <li><a href="#">Sistare apa, Asachi 20</a></li>
                                                      <div class="divider"></div>
                                                      <li><a href="#">Sistare gaze, Bucuresti 21</a></li>
                                                      <div class="divider"></div>
                                                      <li><a href="#">Ploi torențiale 24.0 °C</a></li>
                                                  </ul>
                                              </i>
                                          </div>
                                      </div>

                                      <div style="padding-top:2px;" class="setting-3">
                                          <i class="fa fa-question-circle"></i>
                                      </div>

                                      <div style="padding-top:2px;" class="setting-4 ">
                                          <a style="" href="/users/logout">
                                              <i style="color:#3a2a28;" class="fa fa-sign-out"></i>
                                          </a>
                                      </div>
                                  </div>
                              </div>

                          </div>
                      </div>


                    {{else}}
                     <!-- ===================================================================
                            When user is NOT authenticated
                      ======================================================================== -->
                        <!-- =========================================
                                 Navigation
                            ========================================== -->
                        <nav class="navbar navbar-fixed-top transparent" role="navigation">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!-- Navbar-Header -->
                                        <div class="navbar-header">

                                            <!-- Mobile Menu -->
                                            <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                                                <i class="icon icon_menu"></i>
                                            </button>

                                            <!-- Text-Logo -->
                                            <a href="#top" class="navbar-brand scrollto" title="BeeAlert">
                                                <span class="text-logo">beealert</span>
                                            </a>
                                        </div>
                                        <!-- /End Navbar-Header -->

                                        <!-- Navbar-Collapse -->
                                        <div class="navbar-collapse collapse">
                                            <ul class="nav navbar-nav navbar-right">
                                                <!-- Menu Items -->
                                                <li><a href="#about" title="" class="scrollto">Despre noi</a></li>
                                                <li><a href="#features" title="" class="scrollto">Oportunități</a></li>

                                                <li><a href="#concept" title="" class="scrollto">Concept</a></li>
                                                <li><a href="#Live" title="" class="scrollto">Live</a></li>
                                                <li><a href="#team" title="" class="scrollto">Top</a></li>
                                                <li><a href="#footer" title="" class="scrollto">Contacte</a></li>


                                                <!-- Login and Signup Modal on click -->
                                                <li><a class="btn btn-nav" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">Autentificare</a></li>
                                                <li><a class="btn btn-nav btn-signup" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Înregistrare</a></li>
                                            </ul>
                                        </div>
                                        <!-- /End Navbar-Collapse -->
                                    </div>
                                    <!-- /End Col -->
                                </div>
                                <!-- /End Row -->
                            </div>
                            <!-- /End Container -->
                        </nav>


                        <!-- /End Sticky Navigation -->
                     <div class="modal fade login" id="loginModal">
                         <div class="modal-dialog">
                             <div class="modal-content">

                                 <!-- Modal-Header -->
                                 <div class="modal-header">
                                     <!-- Close Button -->
                                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                         <i class="icon icon_close_alt2"></i>
                                     </button>
                                     <!-- Modal-Header Title-->
                                     <h4 class="modal-title">Sign in to <span>BeeAlert</span></h4>
                                     <p class="modal-subtitle">Introduceți adresă email și parolă/p>
                                 </div>
                                 <!-- /End Modal-Header -->

                                 <!-- Modal-Body Content -->
                                 <div class="modal-body">
                                     <div class="box">
                                         <div class="content">
                                             <!-- Login Form -->
                                             <div class="loginBox">

                                                 <form id="login-modal" method="POST" action="/users/login" role="form">
                                                     <!-- Success/Alert Notification -->

                                                             <input type="text" class="form-control" name="username" placeholder="Username">

                                                             <input type="password" class="form-control" name="password" placeholder="Password">

                                                         <button type="submit" class="btn btn-color">Login</button>
                                                 </form>
                                             </div>
                                             <!-- /End Login Form -->
                                         </div>
                                     </div>
                                     <!-- /End Login Form Box -->
                                     <div class="box">
                                         <!-- Signup Form -->
                                         <div class="content registerBox" style="display:none;">
                                             {{#if errors}}
                                                 {{#each errors}}
                                                     <div class="alert alert-danger">{{msg}}</div>
                                                 {{/each}}
                                             {{/if}}

                                             {{#if success_msg}}
                                                 <div class="alert alert-success">{{success_msg}}</div>
                                             {{/if}}

                                             <form method="post" action="/users/register">
                                                     <input type="text" class="form-control" placeholder="Name" name="name">
                                                     <input type="text" class="form-control" placeholder="Username" name="username">
                                                     <input type="email" class="form-control" placeholder="Email" name="email">
                                                     <input type="password" class="form-control" placeholder="Password" name="password">
                                                     <input type="password" class="form-control" placeholder="Confirm Password" name="password2">
                                                 <button type="submit" class="btn btn-default">Submit</button>
                                             </form>
                                         </div>
                                         <!-- /End Signup Form -->
                                     </div>
                                     <!-- /End Signup Form Box -->
                                 </div>
                                 <!-- /End Modal-Body -->

                                 <!-- Modal-Footer -->
                                 <div class="modal-footer">
                                     <!-- Login-Footer. Redirect to Signup-Modal-->
                                     <div class="forgot login-footer">
                                         <span>Nu aveți un cont?
                                         <a href="javascript: showRegisterForm();"> Înregistrare</a>
                                    </span>
                                     </div>
                                     <!-- Signup-Footer. Redirect to Login-Modal -->
                                     <div class="forgot register-footer" style="display:none">
                                         <span>Aveți deja un cont?</span>
                                         <a href="javascript: showLoginForm();">Logare</a>
                                     </div>
                                 </div>
                                 <!-- /End Modal-Footer -->
                             </div>
                             <!-- /End Modal Content -->
                         </div>
                         <!-- /End Modal Dialog -->
                     </div>
                     <!-- /End Modal -->
                    {{/if}}

                    {{{body}}} <!--Contents of inner or home pages-->

                    {{#if user}} <!-- For Inner account page use these scripts-->
                        <script src="/assets/js/bootstrap.js"></script>
                        <script src="/assets/js/feeds.js"></script>
                        <script src="/assets/js/chat.js"></script>
                        <script src="/assets/js/map.js"></script>
                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwKfBjk-dZfD2yr3rtNgGYzpMd_AEygrc&callback=initMap&language=ro&region=RO"></script>


                    {{else}}<!--For HOME page use these files-->

                        <!--<script src="/assets/js/plugins/jquery1.11.0.min.js"></script>-->
                        <script src="/assets/js/plugins/bootstrap.min.js"></script>
                        <script src="/assets/js/plugins/jquery.easing.1.3.min.js"></script>

                        <script src="/assets/js/plugins/modernizr.custom.min.js"></script>
                        <script src="/assets/js/plugins/plugins.min.js"></script>
                        <script src="/assets/js/plugins/twitter/tweetie.min.js"></script> <!--Raspunde de scroll incet in cascada-->
                        <script src="/assets/js/custom.js"></script>

                    {{/if}}
    </body>
</html>
